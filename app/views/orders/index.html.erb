<div class="container">


    <div class="columns">

        <div class="column is-half">
            <div class="block">
            <h2>My Orders</h2>
            </div>
        </div>
        <div class="column is-half">
        </div>
    </div>


    <div class="block">
        <%@orders.each do |order|%>
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">
                Order </br>
                </p>
                <button class="card-header-icon" aria-label="more options">
                <span class="icon">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                </span>
                </button>
            </header>
            <div class="card-content">
                <div class="content">
                    <table class="table"> 
                        <thead>
                            <tr>
                                <td></td>
                                <td>Name</td>
                                <td>Quantity</td>
                                <td>Total price</td>
                            </tr>
                        </thead>
                        <tbody>
                        <%order.order_items.each do |i|%>
                            <tr>
                                <td><%= image_tag(i.menu.photo_url, size: "80")%></td>
                                <td><%= i.menu.name %></td>
                                <td><%= i.quantity %></td>
                                <td><%= i.quantity * i.menu.price %></td>
                            </tr>
                        <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
            </div>
        </div>
        <%end%>
</div>