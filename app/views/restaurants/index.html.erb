<p id="notice"><%= notice %></p>

<h1>My Restaurants</h1>

<table class='table'>
  <thead>
    <tr>
      <th>id</th>
      <th>Photo</th>
      <th>Name</th>
      <th>Address</th>
      <th>Qr Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td width="200">
         <% if restaurant.qr_code %>
        <%= image_tag(restaurant.qr_code) if restaurant.qr_code.attached? %>
        <%else%>
        No image
        <% end %>
        </td>
        <td>
        <% if restaurant.photo_url %>
        <%= link_to image_tag(restaurant.photo_url, size: "250"), restaurant %>
        <%else%>
        No image
        <% end %>
        </td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

