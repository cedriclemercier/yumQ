<div class="container is-fluid">
  <section class="section">
    <h2 class='title is-4'>BangkokPost news</h2>
    <% @news.each do |n| %>
      <div class="block">
        <h3 class="title is-5">
          <li>
            <a href="<%= n[2] %>" target="_blank"><%= n[0] %>
            </a>
          </li>
        </h3>
        <!-- <p><%= n[1] %></p>-->
      </div>
    <% end %>
  </section>
  <section class='section'>
    <h2 class='title is-4'>New York Times News</h2>
    <% @nytnews.each do |n| %>
      <div class="block">
        <h3 class="title is-5">
          <li>
            <a href="<%= n[2] %>" target="_blank"><%= n[0] %>
            </a>
          </li>
        </h3>
        <!--<p><%= n[1] %></p>-->
      </div>
    <% end %>
  </section>
</div>
